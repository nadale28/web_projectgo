<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="#899999"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dtl_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="#d3d3d3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFACD"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dtl_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#fffff0"
                android:text="TextView"
                android:textColor="#b8860b"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/dtl_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#fffff0"
                android:text="TextView"
                android:textColor="#808000"
                android:textSize="14dp" />

            <SeekBar
                android:id="@+id/dtl_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/RelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/dtl_v_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="재생" />

                <Button
                    android:id="@+id/dtl_v_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/dtl_v_start"
                    android:text="정지" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/dtl_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
