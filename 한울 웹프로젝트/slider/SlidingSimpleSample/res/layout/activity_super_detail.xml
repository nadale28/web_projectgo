<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFACD"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.book.test1122.SuperDetail" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#FDF5E6"
            android:gravity="center"
            android:text="날짜"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#808080"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/sd_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:ems="10"
            android:inputType="date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#FDF5E6"
            android:gravity="center"
            android:text="시각"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#808080"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/sd_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:ems="10"
            android:inputType="time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/seek"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:background="#FDF5E6"
            android:gravity="center"
            android:text="내용"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#808080"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/sd_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:ems="10" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#FDF5E6"
            android:gravity="center"
            android:text="페이지"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#808080"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/sd_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <requestFocus />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>

    <SeekBar
        android:id="@+id/playProgressBar1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="60000"
        android:padding="10dp"
        android:progress="0" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvPlayStartPoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical|left"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvPlayMaxPoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical|right"
                android:text="01:00"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnStartPlay1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Play"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnStopPlay1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/dtl_img_super"
        android:layout_width="100dp"
        android:layout_height="91dp"
        android:src="@drawable/ic_launcher" />

</LinearLayout>